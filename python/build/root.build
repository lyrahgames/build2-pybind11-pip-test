cxx.std = latest
using cxx

hxx{*}: extension = hpp
cxx{*}: extension = cpp

using in

define py: file
py{*}: extension = py

pylib_extension = so
if ($cxx.target.class == 'windows')
  pylib_extension = pyd

define pylib: file
pylib{*}: extension = $pylib_extension

config [strings] config.pxart_python.pybind11.includes
config [strings] config.pxart_python.python.prefix
config [uint64] config.pxart_python.python.version.major
config [uint64] config.pxart_python.python.version.minor